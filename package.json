{
  "name": "daisyui",
  "version": "0.26.2",
  "description": "DaisyUI - Tailwind CSS Components",
  "author": "Pouya Saadeghi",
  "license": "MIT",
  "homepage": "https://github.com/saadeghi/daisyui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saadeghi/daisyui.git"
  },
  "bugs": {
    "url": "https://github.com/saadeghi/daisyui/issues"
  },
  "keywords": [
    "design-system",
    "tailwindcss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "theming",
    "postcss",
    "design",
    "css",
    "ui"
  ],
  "main": "index.js",
  "typings": "index.js",
  "files": [
    "dist",
    "!dist/components",
    "index.js",
    "colors"
  ],
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": [],
      "tailwindcss": "src/tailwind.config.js",
      "postcss-nested": {
        "bubble": [
          "screen"
        ]
      },
      "autoprefixer": [],
      "cssnano": {
        "preset": [
          "default",
          {
            "mergeRules": false
          }
        ]
      }
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.0.4",
    "cssnano": "^4.1.10",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "postcss-nested": "^5.0.1",
    "prejss-cli": "^0.3.3",
    "rtlcss": "^3.0.0",
    "tailwindcss": "^2.0.1"
  },
  "scripts": {
    "utilities": "prejss-cli src/resets/*.css --out-dir dist/resets --format commonjs && prejss-cli src/utilities/*.css --out-dir dist/utilities --format commonjs",
    "components": "postcss src/{components,themes}/**/*.css --base src --dir dist",
    "base": "cat dist/components/base/*.css > dist/base.css",
    "styled": "cat dist/components/base/*.css dist/components/styled/*.css > dist/styled.css",
    "themes": "cat dist/themes/*.css > dist/themes.css",
    "rtl": "rtlcss dist/base.css -s && rtlcss dist/styled.css -s",
    "prejss": "prejss-cli dist/{{base,styled}{,.rtl},themes}.css --format commonjs",
    "full": "postcss src/full/index.css -o dist/full.css",
    "build": "npm run utilities && npm run components && npm run base && npm run styled && npm run themes && npm run rtl && npm run prejss && npm run full",
    "docs": "cd src/docs && npm install",
    "dev": "cd src/docs && npm run dev",
    "add": "touch src/components/base/$npm_config_name.css && touch src/components/styled/$npm_config_name.css && open src/components/base/$npm_config_name.css && open src/components/styled/$npm_config_name.css"
  }
}
